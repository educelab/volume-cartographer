}

auto ProjectInfo::VersionMajor() -> uint32_t
{
    static uint32_t vMaj{@PROJECT_VERSION_MAJOR@};
    return vMaj;
}

auto ProjectInfo::VersionMinor() -> uint32_t
{
    static uint32_t vMin{@PROJECT_VERSION_MINOR@};
